{
  "$schema": "http://interagent.github.io/interagent-hyper-schema",
  "type": [
    "object"
  ],
  "definitions": {
    "voters": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Match API",
      "description": "Match API",
      "type": [
        "object"
      ],
      "definitions": {
        "id": {
          "description": "A stable ID for a given voter",
          "type": [
            "string"
          ]
        },
        "voter": {
          "description": "User fields",
          "type": [
            "object"
          ],
          "properties": {
            "id": {
              "$ref": "#/definitions/voters/definitions/id"
            },
            "first_name": {
              "type": [
                "string"
              ]
            },
            "last_name": {
              "type": [
                "string"
              ]
            },
            "dob": {
              "type": [
                "string"
              ],
              "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            },
            "address": {
              "type": [
                "string"
              ]
            },
            "address_street_number": {
              "type": [
                "string"
              ]
            },
            "address_unit_designator": {
              "type": [
                "string"
              ]
            },
            "address_apt_number": {
              "type": [
                "string"
              ]
            },
            "city": {
              "type": [
                "string"
              ]
            },
            "state": {
              "enum": [
                "AL",
                "AK",
                "AZ",
                "AR",
                "CA",
                "CO",
                "CT",
                "DC",
                "DE",
                "FL",
                "GA",
                "HI",
                "ID",
                "IL",
                "IN",
                "IA",
                "KS",
                "KY",
                "LA",
                "ME",
                "MD",
                "MA",
                "MI",
                "MN",
                "MS",
                "MO",
                "MT",
                "NE",
                "NV",
                "NH",
                "NJ",
                "NM",
                "NY",
                "NC",
                "ND",
                "OH",
                "OK",
                "OR",
                "PA",
                "RI",
                "SC",
                "SD",
                "TN",
                "TX",
                "UT",
                "VT",
                "VA",
                "WA",
                "WV",
                "WI",
                "WY"
              ]
            },
            "zip_code": {
              "type": [
                "string"
              ],
              "pattern": "^[0-9]{5}(-[0-9]{4})?$"
            }
          },
          "required": [
            "first_name",
            "last_name"
          ]
        },
        "address": {
          "description": "Address fields",
          "type": [
            "object"
          ],
          "properties": {
            "state": {
              "enum": [
                "AL",
                "AK",
                "AZ",
                "AR",
                "CA",
                "CO",
                "CT",
                "DC",
                "DE",
                "FL",
                "GA",
                "HI",
                "ID",
                "IL",
                "IN",
                "IA",
                "KS",
                "KY",
                "LA",
                "ME",
                "MD",
                "MA",
                "MI",
                "MN",
                "MS",
                "MO",
                "MT",
                "NE",
                "NV",
                "NH",
                "NJ",
                "NM",
                "NY",
                "NC",
                "ND",
                "OH",
                "OK",
                "OR",
                "PA",
                "RI",
                "SC",
                "SD",
                "TN",
                "TX",
                "UT",
                "VT",
                "VA",
                "WA",
                "WV",
                "WI",
                "WY"
              ]
            },
            "seed": {
              "type": [
                "integer"
              ]
            }
          },
          "required": [
            "state"
          ]
        }
      },
      "links": [
        {
          "description": "Match a user to their voter roll",
          "method": "POST",
          "href": "/v1/voters/search",
          "title": "search",
          "rel": "matches",
          "schema": {
            "properties": {
              "user": {
                "$ref": "#/definitions/voters/definitions/voter"
              },
              "ideal_num_matches": {
                "type": [
                  "integer"
                ],
                "minimum": 0
              }
            },
            "type": [
              "object"
            ],
            "required": [
              "user"
            ]
          }
        },
        {
          "description": "Find a user by ID",
          "method": "GET",
          "href": "/v1/voters/{(/definitions/voters/definitions/id)}",
          "rel": "self",
          "title": "get"
        },
        {
          "description": "Find a random address by state",
          "method": "POST",
          "href": "/v1/voters/random_address",
          "title": "random_address",
          "rel": "matches",
          "schema": {
            "properties": {
              "address": {
                "$ref": "#/definitions/voters/definitions/address"
              }
            },
            "type": [
              "object"
            ],
            "required": [
              "address"
            ]
          }
        }
      ]
    }
  },
  "properties": {
    "voters": {
      "$ref": "#/definitions/voters"
    }
  },
  "id": "verifier"
}
